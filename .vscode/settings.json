{
  "json.schemaDownload.enable": true,

  // UI settings
  "breadcrumbs.enabled": false,

  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.updateDelay": 0,

  "task.problemMatchers.neverPrompt": {
    "shell": true
  },

  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": true,

  // File nesting for agda auxiliary files
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.agda": "${capture}.agdai, ${capture}.agda~",
    "*.lagda": "${capture}.agdai, ${capture}.agda~",
    "*.lagda.md": "${capture}.agdai, ${capture}.agda~"
  },

  // Declutter explorer view
  "files.exclude": {
    "MAlonzo/": true,
    "**/MAlonzo/": true,
    "agdaFiles": true
  },

  // Snippet setup
  "editor.inlineSuggest.enabled": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.snippetSuggestions": "top",
  "javascript.suggest.names": false,

  // Autoformatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.configPath": ".prettierrc.json",
  "editor.formatOnType": true,
  "editor.formatOnSave": true,

  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  "editor.tabSize": 2,

  // File type specific
  "files.associations": {
    "*.lock": "json"
  },

  "[agda]": {
    "editor.rulers": [80],
    "editor.quickSuggestions": {
      "other": "on"
    },
    "editor.autoClosingBrackets": "never"
  },

  "[css]": {
    "editor.quickSuggestions": {
      "other": true
    },
    "editor.suggest.insertMode": "replace",
    "gitlens.codeLens.scopes": ["document"]
  },

  "[javascript]": {
    "editor.maxTokenizationLineLength": 2500
  },

  "[json][jsonc]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "gitlens.codeLens.scopes": ["document"]
  },

  "[literate agda markdown]": {
    "editor.rulers": [80],
    "editor.quickSuggestions": {
      "other": "on"
    },
    "editor.autoClosingBrackets": "never"
  },

  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.detectIndentation": true
  },

  "[markdown]": {
    "editor.rulers": [80],
    "editor.quickSuggestions": {
      "other": "on"
    },
    "editor.autoClosingBrackets": "never"
  },

  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.formatOnPaste": false
  }
}
